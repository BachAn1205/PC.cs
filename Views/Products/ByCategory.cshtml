@model Category

@section PageTitle {
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">@Model.Name</h1>
                <p class="lead fw-normal text-white-50 mb-0">Tất cả sản phẩm</p>
            </div>
        </div>
    </header>
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
    <li class="breadcrumb-item active">@Model.Name</li>
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4">
            @foreach (var product in Model.Products)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="@product.Image" alt="@product.Name" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a>
                                </h5>
                                <!-- Product price-->
                                $@product.Price.ToString("N2")
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <button class="btn btn-outline-dark add-to-cart-btn"
                                        data-product-id="@product.Id"
                                        onclick="addToCart(event, @product.Id)">
                                    Add to cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Styles{
<style>
        header.bg-dark {
            background: linear-gradient(135deg, #2c3e50 0%, #4ca1af 100%) !important;
            padding: 5rem 0 !important;
            margin-bottom: 3rem;
            position: relative;
            overflow: hidden;
        }

            header.bg-dark::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path fill="rgba(255,255,255,0.05)" d="M0,0 L100,0 L100,100 L0,100 Z" /></svg>');
                background-size: cover;
            }
    .breadcrumb {
        padding: 0.75rem 1rem;
        background-color: #f8f9fa;
        border-radius: 0.25rem;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "›";
        padding: 0 0.5rem;
        color: #6c757d;
    }

    .breadcrumb-item a {
        color: #0d6efd;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    .breadcrumb-item a:hover {
        color: #0a58ca;
        text-decoration: underline;
    }

        .card {
            border: none;
            border-radius: 0.5rem;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            }

        .card-img-top {
            height: 200px;
            object-fit: contain;
            padding: 1rem;
            background-color: #f8f9fa;
            transition: transform 0.3s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        .card-body {
            padding: 1.5rem !important;
        }

        h5.fw-bolder a {
            color: #2c3e50;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            h5.fw-bolder a:hover {
                color: #4ca1af;
            }

        .card-footer {
            background-color: transparent !important;
            padding: 1rem 1.5rem 1.5rem !important;
        }

        .add-to-cart-btn {
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
            border-width: 2px;
            position: relative;
            overflow: hidden;
        }

            .add-to-cart-btn:hover {
                background-color: #2c3e50;
                color: white;
            }

            .add-to-cart-btn::after {
                content: "";
                position: absolute;
                top: 50%;
                left: 50%;
                width: 5px;
                height: 5px;
                background: rgba(255, 255, 255, 0.5);
                opacity: 0;
                border-radius: 100%;
                transform: scale(1, 1) translate(-50%);
                transform-origin: 50% 50%;
            }


</style>
}

