                        <i class="bi bi-motherboard me-1"></i>
                        <span>Products</span>
                        <span class="nav-underline"></span>
                    </a>
                </li>
            </ul>

            <!-- Cart button -->
            <div class="d-flex align-items-center ms-lg-3">
                <form asp-controller="Cart" asp-action="Index" asp-area="" class="position-relative">
                    <button class="btn btn-tech position-relative px-3 py-2" type="submit">
                        <i class="bi bi-cart3 fs-5"></i>
                        <span class="ms-1 d-none d-md-inline">Cart</span>
                        <span id="cart-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @if (Model.Cart == null)
                            {
                                @:0
                            }
                            else
                            {
                                @Model.Cart.Count
                            }
                        </span>
                    </button>
                </form>
            </div>

            <!-- Login partial -->
            <div class="ms-lg-3">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </div>
</nav>

