@model Category

@section PageTitle {
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">@Model.Name</h1>
                <p class="lead fw-normal text-white-50 mb-0">Tất cả sản phẩm</p>
            </div>
        </div>
    </header>
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
    <li class="breadcrumb-item active">@Model.Name</li>
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4">
            @foreach (var product in Model.Products)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="@product.Image" alt="@product.Name" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a>
                                </h5>
                                <!-- Product price-->
                                $@product.Price.ToString("N2")
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <button class="btn btn-outline-dark add-to-cart-btn"
                                        data-product-id="@product.Id"
                                        onclick="addToCart(event, @product.Id)">
                                    Add to cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Styles{
<style>

    .breadcrumb {
        padding: 0.75rem 1rem;
        background-color: #f8f9fa;
        border-radius: 0.25rem;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "›";
        padding: 0 0.5rem;
        color: #6c757d;
    }

    .breadcrumb-item a {
        color: #0d6efd;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    .breadcrumb-item a:hover {
        color: #0a58ca;
        text-decoration: underline;
    }

</style>
}